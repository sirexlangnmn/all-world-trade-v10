<div id="client-email-the-trader-modal" class="create-post" uk-modal>
  <div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical shadow-2xl uk-animation-slide-bottom-small">
    <div class="py-4 border-b flex  justify-between px-6">
      <h3 class="text-lg font-semibold" id="clientEmailTheTraderModalTitle"> Email the TraderName </h3>
      <div>
        <button class="uk-modal-close-default hover:bg-gray-100 rounded-full p-2.5 block uk-icon uk-close mt-0.5"
          type="button" uk-close>
          <i class="icon-feather-close"></i>
        </button>
      </div>
    </div>
    <div class="create-post-modal-body space-x-6 p-5 overflow-x-hidden mr-1" data-simplebar>
      <form action="javascript:void(0);" method="POST" id="formClientEmailTheTraderModal"
        name="formClientEmailTheTraderModal" enctype="multipart/form-data" accept-charset="utf-8"
        class="space-y-4 g:w-8/12">
        <p class="leading-6 pr-4 line-clamp-2 md:block hidden mb-12" id="clientEmailTheTraderModalParagraph">Send an email to TraderName</p>
        <input type="text" id="cett_company_name" name="cett_company_name" hidden>
        <div>
          <label> Message </label>
          <textarea rows="12" class="with-border w-full p-4" placeholder="" id="cett_message" name="cett_message"></textarea>
        </div>
      </form>
    </div>
    <div class="flex items-center w-full justify-between p-3 border-t">
      <div class="flex items-center space-x-2">
      </div>
      <div class="flex space-x-2">
        <a href="#" id="btnClientEmailTheTrader" class="bg-blue-600 flex h-9 items-center justify-center rounded-md text-white px-5 font-medium">Send</a>
      </div>
      <a href="#" id="btnHiddenClientEmailTheTrader" hidden
        class="bg-blue-600 flex h-9 items-center justify-center rounded-lg text-white px-12 font-semibold">Send</a>
    </div>
  </div>
</div>